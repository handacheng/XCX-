<view class="bei" style="background:url('https://s3.bmp.ovh/imgs/2022/03/7fd8f8ced5b2f2e0.jpg') "> 
  <view wx:for="{{navlist}}" wx:key="index">
<view>{{item.text}}</view>
</view>
<view style="display: flex;margin-top: 30rpx;">

   <view style="margin-left: 30rpx;margin-top: 10rpx; font-size: 36rpx;letter-spacing: 5rpx;">标题：</view>
   <input type="text" name='biaoti' class="shuru" placeholder="请输入文章名..."bindinput="biaotiInput"/>
</view>
<view style="display: flex;margin-top: 30rpx;">
   <view style="margin-left: 30rpx;margin-top: 10rpx; font-size: 36rpx;letter-spacing: 5rpx;">作者：</view>
   <input type="text" name='zuozhe' class="shuru" placeholder="请输入作者..."bindinput="zuozheInput"/>
</view>
<view style="margin-top: 30rpx;">
   <view style="margin-left: 30rpx; font-size: 36rpx;letter-spacing: 5rpx;">内容：</view>
   <view class="wen">
     <textarea class="neirong" name='neirong' style="width: 680rpx;height: 750;" placeholder="请输入文章内容..."bindinput="neirongInput"></textarea>
   </view>
</view>
<button class="tijiao" style="width: 300rpx; height: 80rpx;" bindtap="clickButton" form-type="submit">提交</button>
</view>